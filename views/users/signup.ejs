<div class="w-full flex justify-center">
    <div class="w-[20rem] h-screen
flex flex-col justify-center items-center">
        <a href="/">
            <img src="/images/pomo-logo.png" alt="logo" class="w-full">
        </a>
        <h2 class="text-xl text-gray-300 my-4">Sign up</h2>

        <div class="w-full bg-white text-black px-4 py-2 rounded-md mt-4">

            <a href="/users/login/google">
                <button class="w-full shadow py-2 text-gray-500 text-sm mt-4 relative
                    border border-gray-200 rounded-md active:top-1 active:shadow-none
                    flex gap-3 justify-center items-center">
                    <img src="/images/g-logo.png" alt="google logo" class="w-[18px]">
                    Login with Google
                </button>
            </a>

            <div class="w-full flex items-center my-2 gap-3">
                <hr class="grow h-1 bg-grey-400">
                <p class="text-gray-400">or</p>
                <hr class="grow h-1 bg-grey-400">
            </div>
            <form action="" method="POST"
                  class="w-full">
                <label for="name"
                       class="text-gray-400 uppercase text-xs">Name </label>
                <input type="text" id="name" name="name" required
                       class="w-full bg-gray-300 indent-1 p-1  focus:outline-none mb-4 rounded">

                <label for="email"
                       class="text-gray-400 uppercase text-xs">Email </label>
                <input type="email" id="email" name="email" required placeholder="example@mial.com"
                       class="w-full bg-gray-300 indent-1 p-1  focus:outline-none mb-4 rounded">

                <label for="password"
                       class="text-gray-400 uppercase text-xs">Password </label>
                <input type="password" id="password" required name="password"
                       class="w-full bg-gray-300 indent-1 p-1 focus:outline-none rounded mb-4">

                <button class="w-full text-center bg-gray-600 hover:bg-black
            rounded text-white py-2 mb-4">Sign up with Email</button>
            </form>
        </div>
        <p class="text-gray-200 mt-4 mb-2">Already have an account?</p>
        <a href="./login" class="text-sm underline">Log in</a>
    </div>
</div>




