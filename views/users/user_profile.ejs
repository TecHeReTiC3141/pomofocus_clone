<div class="user-profile fixed top-0 left-0 w-screen h-screen
            bg-black bg-opacity-20
            flex justify-center items-center hidden">

    <form action="" method="POST" class="w-[32rem]
                bg-white rounded-t-md pb-4 pt-12 px-6
                text-black flex justify-start items-center relative mb-12
                transition ease-linear duration-300"
          id="user-update-form">
        <h3 class="absolute top-2 left-4 uppercase text-gray-400">Profile</h3>
        <button class="close-profile absolute right-4 top-2 text-2xl text-gray-400 hover:text-gray-600">
            <i class="fa-solid fa-xmark"></i>
        </button>

        <div class="flex flex-col items-center">
            <img src="/images/user-icon.png" alt="User avatar"
                 id="avatar" class="w-16 border-4 border-gray-400
                            border-dotted rounded-full mr-4">
        </div>

        <label for="" class="w-full">
            <input type="text" value="<%= user.name %>" class="text-2xl border-0
            focus:outline-none w-full my-2 font-bold" name="name" id="name" required>
        </label>

        <div class="absolute left-0 top-full w-full p-3 rounded-b-md
                flex justify-end gap-3 bg-gray-300">
            <button class="text-gray-600 text-sm" id="cancel-update-btn">Cancel</button>
            <button class="submit-btn bg-black text-white py-2 px-4 rounded">Save</button>
        </div>

    </form>

</div>